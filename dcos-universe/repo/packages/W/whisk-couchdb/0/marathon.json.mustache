{
  "id": "/{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "instances": {{service.instances}},
  "env": {
    "COUCHDB_USER": "{{service.couchdb-user}}",
    "COUCHDB_PASSWORD": "{{service.couchdb-password}}"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.whisk-couchdb-docker}}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": {{service.couchdb-port}},
          "hostPort": {{service.couchdb-port}},
          "servicePort": 0,
          "protocol": "tcp"
        }
      ]
    },
    "volumes": [
      {
        "containerPath": "/usr/local/var/lib/couchdb",
        "hostPath": "~/openwhisk/couchdb",
        "mode": "RW"
      }
    ]
  },
  "healthChecks": [
    {
      "path": "/_stats",
      "protocol": "HTTP",
      "gracePeriodSeconds": 30,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}"
  }
}
